<div class="container">
  <div class="row col-md-4 col-md-offset-4" style="left: 0%; top: 70px;">
    <p id="notice"><%= notice %></p>

    <h1>Listing Users</h1>

    <table>
      <thead>
      <tr>
        <th>E-Mail</th>
        <th>Name</th>
        <th>Role</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <% if can? :destroy, user %>
          <% end %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.role %></td>

            <!--<td><%= link_to 'Edit', edit_user_path(user) %></td>-->

            <td><%= button_to 'Delete', user, :method => :delete, :class=>:destroy, data: { confirm: 'Are you sure?' } if can? :destroy, user %><</td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New User', new_user_path %>

  </div>
</div>
